{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contact Details</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td><a href="{{ path('book_show', { 'id': entity.book.id }) }}">{{ entity.book.title }}</a></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('book_show', { 'id': entity.book.id }) }}">Back to the address book</a>
        </li>
        <li>
            <a href="{{ path('contact') }}">Back to the contacts list</a>
        </li>
        <li>
            <a href="{{ path('contact_edit', { 'id': entity.id }) }}">Edit</a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
