{% extends '::base.html.twig' %}

{% block body -%}
    <p><a href="{{ path('crud_main') }}">CRUD Main</a> | <a href="{{ path('contact') }}">Manage Contacts</a><p>

    <h1>Books list</h1>
    {% if entities is empty %}
        <strong>No address books created so far. Create new one below.</strong>
    {% else %}
        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Contacts</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('book_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td align="middle"><a href="{{ path('book_show', { 'id': entity.id }) }}">{{ entity.contacts|length }}</a></td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'id': entity.id }) }}">Details</a>
                        </li>
                        <li>
                            <a href="{{ path('book_edit', { 'id': entity.id }) }}">Edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <ul>
        <li>
            <a href="{{ path('book_new') }}">Create a new book</a>
        </li>
    </ul>
{% endblock %}
